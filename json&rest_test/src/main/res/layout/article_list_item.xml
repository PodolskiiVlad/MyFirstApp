<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <ImageView
        android:id="@+id/articleImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="300dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:foreground="@color/photoTint"/>

    <TextView
        android:id="@+id/articleAuthor"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/articleImageView"
        android:layout_alignStart="@+id/articleImageView"
        android:layout_alignTop="@+id/articleImageView"
        android:background="@color/articleFrame"
        android:ellipsize="end"
        android:maxLength="20"
        android:text="@string/someText"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/articleImageView"
        android:layout_alignStart="@+id/articleImageView"
        android:layout_below="@+id/articleAuthor"
        android:layout_margin="16dp"
        android:maxLines="3"
        android:textColor="@color/titleTextColor"
        android:textSize="22sp"
        android:text="@string/someText"/>

    <TextView
        android:id="@+id/articleDescription"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/articleImageView"
        android:layout_alignLeft="@+id/articleImageView"
        android:layout_alignStart="@+id/articleImageView"
        android:background="@color/articleFrame"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="@string/someText"/>

    <TextView
        android:id="@+id/articlePublicationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/articleAuthor"
        android:layout_alignTop="@+id/articleAuthor"
        android:layout_margin="4dp"
        android:background="@color/articleFrame"
        android:textSize="12sp"
        android:text="@string/someText"
        android:layout_alignEnd="@+id/articleAuthor" />
</RelativeLayout>