<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageEditActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textEditActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageEditActivity"
        android:text="@string/sometext"
        android:textSize="30sp"
        android:textColor="@color/colorText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_marginLeft="10dp"
        android:id="@+id/btnChangeText"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/textEditActivity"
        android:layout_toEndOf="@+id/textEditActivity"
        android:layout_toRightOf="@+id/textEditActivity"
        android:background="@drawable/ic_edit"
        android:onClick="onClick"
        android:layout_marginStart="10dp" />

    <ImageButton
        android:layout_margin="6dp"
        android:id="@+id/btnChangeImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/imageEditActivity"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_edit"
        android:onClick="onClick"/>
</RelativeLayout>